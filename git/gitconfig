[user]
	name = hxueh
	email = hxueh@users.noreply.github.com
	signingkey = hxueh@users.noreply.github.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
  pager = delta
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[rebase]
    autoStash = true
    autoSquash = true
[branch]
    autosetuprebase = always
[credential]
	helper = osxkeychain
[alias]
    squash-all = "!f(){ git reset $(git commit-tree HEAD^{tree} -m \"${1:-A new start}\");};f"
	sync = "!f() { git checkout main && git pull && git checkout - && git rebase main; }; f"
	cleanup = "rebase -i main"
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[merge]
    conflictStyle = zdiff3
[diff]
	tool = cursor
[difftool "cursor"]
	cmd = cursor --wait --diff $LOCAL $REMOTE
[mergetool "cursor"]
	cmd = cursor --wait --merge $LOCAL $REMOTE $BASE $MERGED
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://github.com"]
	helper = !$(which gh) auth git-credential
[credential "https://gist.github.com"]
    helper = !$(which gh) auth git-credential
[safe]
	directory = *
[commit]
	gpgsign = true
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    hyperlinks = true
    hyperlinks-file-link-format = "cursor://file/{path}:{line}"
