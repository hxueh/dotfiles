{
  // workbench
  "workbench.settings.editor": "json",
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.startupEditor": "terminal",
  // window
  "window.autoDetectColorScheme": true,
  "window.title": "${activeEditorMedium}${separator}${rootPath}",
  "window.closeWhenEmpty": false,
  "window.titleBarStyle": "custom",
  "window.restoreWindows": "folders",
  "window.openFoldersInNewWindow": "on",
  // update
  "update.showReleaseNotes": false,
  "update.mode": "manual",
  // search
  "search.quickOpen.includeHistory": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true
  },
  // files
  "files.autoSave": "afterDelay",
  "files.autoGuessEncoding": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.git-crypt": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.stfolder": true,
    "**/.stversions": true,
    "**/.stignore": true,
    "**/.stignore.real": true,
    "**/CVS": true,
    "**/.venv": true,
    "launch.json": true,
    "**/.idea": true,
    "**/__pycache__": true,
    "**/.pylintrc": true,
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.pytest_cache": true,
    "**/.scannerwork": true,
    "**/vendor": true,
    "**/target": true,
    "**/.vscode": true
  },
  // git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.confirmEmptyCommits": false,
  // editor
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": true,
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.fontFamily": "'Maple Mono NF CN', 'BlexMono Nerd Font', 'monospace'",
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "onlySnippets",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnType": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  // extensions
  "extensions.ignoreRecommendations": true,
  "extensions.closeExtensionDetailsOnViewChange": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  // explorer
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // go
  "go.addTags": {
    "tags": "json,xml,db,redis,gorm,form",
    "options": "json=omitempty,xml=omitempty",
    "promptForTags": true,
    "transform": "snakecase"
  },
  "go.formatTool": "default",
  "go.useLanguageServer": true,
  "go.inferGopath": false,
  "gopls": {
    "ui.completion.usePlaceholders": true
  },
  "go.toolsManagement.autoUpdate": true,
  "go.lintOnSave": "workspace",
  "go.testFlags": ["-count=1", "-gcflags=all=-l"],
  // python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // rust
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.diagnostics.warningsAsHint": ["dead_code"],
  // terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.fontFamily": "'Maple Mono NF CN', 'BlexMono Nerd Font', 'monospace'",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.hideOnStartup": "whenEmpty",
  "terminal.integrated.allowedLinkSchemes": ["file", "http", "https", "cursor"],
  // redhat
  "redhat.telemetry.enabled": false,
  // Telemetry
  "telemetry.feedback.enabled": false,
  // beancount
  "beancount.mainBeanFile": "main.bean",
  "beancount.instantAlignment": true,
  "beancount.separatorColumn": 70,
  "beancount.inputMethods": ["pinyin"],
  "beancount.fixedCJKWidth": true,
  // jupyter
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  // Typescript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Shell
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "shellcheck.customArgs": ["--external-sources"],
  // Gitlens
  "gitlens.launchpad.indicator.enabled": false,
  "gitlens.telemetry.enabled": false,
  // cursor
  "cursor.cpp.disabledLanguages": ["beancount"],
  "cursor.composer.queueMessageDefaultBehavior": "stop-and-send",
  // Database client
  "database-client.autoSync": true,
  // Lua
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2",
    "quote_style": "double",
    "max_line_length": "120"
  }
}
