{
  "cleanupPeriodDays": 90,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "deny": [
      "Bash(git push)",
      "Bash(git branch -D)",
      "Read(:*.bean)",
      "Edit(:*.bean)",
      "MultiEdit(:*.bean)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
