{
  "cleanupPeriodDays": 10,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "deny": [
      "Read(*.bean)",
      "Edit(*.bean)",
      "MultiEdit(*.bean)"
    ],
    "defaultMode": "plan"
  },
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
